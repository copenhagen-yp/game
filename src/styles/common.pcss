@import "colors.pcss";

*,
*::before,
*::after {
  font-family: 'IBM Plex Sans', 'Arial', sans-serif;
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

html,
body {
  height: 100%;
}

h1 {
  margin: 0;
}

.light {
  color: var(--colorLight);
  background-color: var(--backgroundLight);
  height: 100%;
}

.dark {
  color: var(--colorDark);
  background-color: var(--backgroundDark);
  height: 100%;
}
