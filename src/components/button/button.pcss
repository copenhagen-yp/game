.button {
  border: none;
  padding: 10px;
  border-radius: 8px;
  font-size: 13px;
  cursor: pointer;
  transition: background-color 0.2s;
  background-color: #3369F3;
  color: #ffffff;

  &:hover {
    background-color: #1953e8;
  }

  &:disabled {
    background-color: #89a7f5;
  }
}

.link {
  color: #3369F3;
  background-color: transparent;

  &:hover {
    background-color: transparent;
    color: #1953e8;
  }
}