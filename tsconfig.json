{
  "compilerOptions": {
    "lib": ["dom", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "importHelpers": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "*": ["./src/*"]
    },
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src", "./node_modules/@types", "global.d.ts"],
  "exclude": ["**/*.js"]
}
